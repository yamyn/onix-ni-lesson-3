<h1>UsersList</h1>
<section class="row justify-content-end p-3">
    <%- include("./createUserForm.ejs") %> <%- include("./changeUser.ejs") %>
</section>
<section class="row justify-content-center">
    <table class="table table-hover ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">email</th>
                <th scope="col"></th>
                <th scope="col">full name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user, i){ %>
            <tr>
                <th scope="row"><%=i + 1%></th>
                <td><%=user.email %></td>
                <td>
                    <label
                        class="btn btn-sm btn-outline-info"
                        data-toggle="modal"
                        data-target="#staticBackdrop-1"
                    >
                        <input
                            class="visually-hidden"
                            type="radio"
                            form="updateUserForm"
                            name="id"
                            value="<%=user.id %>"
                        />
                        update
                    </label>
                </td>
                <td><%=user.fullName %></td>
                <td>
                    <label
                        class="btn btn-sm btn-outline-danger"
                        data-toggle="modal"
                        data-target="#deleteUserModal"
                    >
                        <input
                            class="visually-hidden"
                            type="radio"
                            form="deleteUserForm"
                            name="id"
                            value="<%=user.id %>"
                        />
                        delete
                    </label>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</section>
